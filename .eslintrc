{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
	"sourceType": "module",
    "ecmaFeatures": {
        "modules": true
    }
  },
  "rules": {
    "no-console": "off",
    "strict": ["error", "global"],
	"comma-dangle": ["error", "always-multiline"],
	"semi": ["error", "always"],
    "indent": ["error", "tab", { "SwitchCase": 1 }]
  }
}
